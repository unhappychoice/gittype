# text_original
class Person
  attr_reader :name   # Read-only name
  attr_writer :age    # Write-only age
  attr_accessor :email # Read-write email
  
  def initialize(name)
    @name = name # Set name
    @age = 0     # Default age
  end
  
  def greet
    puts "Hello, I'm #{@name}" # Print greeting
  end
end

